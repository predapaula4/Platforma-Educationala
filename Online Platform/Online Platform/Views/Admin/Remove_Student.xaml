<UserControl x:Class="Online_Platform.Views.Remove_Student"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Online_Platform.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Background="LightBlue">
        <TextBlock Text="Nume student" Canvas.Left="355" Canvas.Top="100"></TextBlock>
        <TextBox Text="{Binding Student_Name}" Height="30" Width="100" Canvas.Left="345" Canvas.Top="130"></TextBox>
        <Button Command="{Binding Modify_Student}"  Height="30" Width="100" Canvas.Left="345" Canvas.Top="180" Content="Modificare" Background="White"></Button>
    </Canvas>
</UserControl>
